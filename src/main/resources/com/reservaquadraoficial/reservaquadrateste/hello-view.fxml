<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" style="-fx-padding: 30; -fx-alignment: center;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.reservaquadraoficial.reservaquadrateste.HelloController">

    <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Sistema de Reservas de Quadra" />

    <Button onAction="#onCadastrarReservaClicked" onMouseClicked="#onCadastrarReservaClicked" style="-fx-font-size: 16; -fx-pref-width: 200;" text="Cadastrar Reserva">
      <font>
         <Font name="Baskerville Old Face" size="12.0" />
      </font></Button>

    <Button onAction="#onBuscarReservaClicked" style="-fx-font-size: 16; -fx-pref-width: 200;" text="Buscar Reservas" />

    <Button onAction="#onEditarReservaClicked" style="-fx-font-size: 16; -fx-pref-width: 200;" text="Editar Reserva" />

    <Button onAction="#onExcluirReservaClicked" style="-fx-font-size: 16; -fx-pref-width: 200;" text="Excluir Reserva" />
</VBox>
